{
  "yaml.schemas": {
    "./docs/public/schemas/agent-frontmatter.schema.json": ".github/agents/**/*.md"
  },
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.hover": true,
  "yaml.format.enable": true,
  "yaml.schemaStore.enable": true,
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "off"
    }
  }
}
