{
  "name": "@repo-agents/cli",
  "version": "1.5.0",
  "description": "CLI tool for creating AI-powered GitHub Actions workflows from markdown agent definitions",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "bin": {
    "repo-agents": "./packages/cli/src/index.ts"
  },
  "files": [
    "packages/*/src"
  ],
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('bun') === -1) throw new Error('\\nâŒ This project requires Bun. Please use:\\n  bun install\\n\\nInstall Bun: https://bun.sh\\n')\"",
    "cli": "bun packages/cli/src/index.ts",
    "repo-agent": "bun packages/runtime/src/index.ts",
    "test": "bun test packages/*/src/**/*.test.ts",
    "test:unit": "bun test packages/*/src/**/*.test.ts --ignore-pattern='**/e2e/**' --ignore-pattern='**/integration/**' --ignore-pattern='**/performance/**'",
    "test:integration": "bun test packages/cli/tests/integration/*.test.ts",
    "test:e2e": "bun test packages/cli/tests/e2e/*.test.ts",
    "test:performance": "bun test packages/cli/tests/performance/*.test.ts",
    "test:all": "bun run typecheck && bun run test && bun run test:integration && bun run test:e2e && bun run validate:agents",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bun x @biomejs/biome check .",
    "lint:fix": "bun x @biomejs/biome check --write .",
    "format": "bun x @biomejs/biome format --write .",
    "format:check": "bun x @biomejs/biome format .",
    "typecheck": "bun x tsc --noEmit",
    "validate:agents": "bun scripts/validate-agents.ts",
    "docs:dev": "bun run --filter docs dev",
    "docs:build": "bun run --filter docs build",
    "docs:preview": "bun run --filter docs preview",
    "prepublishOnly": "bun run test"
  },
  "keywords": [
    "github",
    "cli",
    "claude",
    "ai",
    "automation",
    "workflows",
    "github-actions"
  ],
  "author": "Luca Silverentand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasilverentand/repo-agents.git"
  },
  "homepage": "https://github.com/lucasilverentand/repo-agents#readme",
  "bugs": {
    "url": "https://github.com/lucasilverentand/repo-agents/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.6",
    "@types/js-yaml": "^4.0.9",
    "fast-check": "^4.5.3",
    "js-yaml": "^4.1.1",
    "lefthook": "^2.0.15",
    "typescript": "^5.4.5",
    "zod": "^4.0.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.3.0"
  }
}
