{
  "name": "gh-claude",
  "version": "0.4.0",
  "description": "GitHub CLI extension for creating Claude-powered GitHub Actions workflows",
  "main": "dist/index.js",
  "bin": {
    "gh-claude": "./dist/index.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bun run eslint src --ext .ts",
    "format": "bun x prettier --write \"src/**/*.ts\"",
    "prepare": "bun run build",
    "docs:dev": "cd docs && bun run astro dev",
    "docs:build": "cd docs && bun run astro build",
    "docs:preview": "cd docs && bun run astro preview"
  },
  "keywords": [
    "github",
    "cli",
    "claude",
    "ai",
    "automation",
    "workflows",
    "github-actions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.37.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "astro": "^5.16.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.3.2",
    "sharp": "^0.34.5",
    "starlight-theme-rapide": "^0.5.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
