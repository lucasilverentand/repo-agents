{
  "name": "repo-agents-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub CLI extension for creating AI-powered GitHub Actions workflows from markdown agent definitions",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "cli": "bun packages/cli/src/index.ts",
    "test": "bun test packages/*/src/**/*.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "bun x prettier --write \"packages/*/src/**/*.ts\"",
    "typecheck": "bun x tsc --noEmit",
    "docs:dev": "bun run --filter docs dev",
    "docs:build": "bun run --filter docs build",
    "docs:preview": "bun run --filter docs preview"
  },
  "keywords": [
    "github",
    "cli",
    "claude",
    "ai",
    "automation",
    "workflows",
    "github-actions"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
