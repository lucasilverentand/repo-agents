{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn",
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noVar": "error",
        "noTemplateCurlyInString": "off",
        "useIterableCallbackReturn": "off",
        "noImplicitAnyLet": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "**/packages/**/*.ts",
      "**/packages/**/*.json",
      "**/docs/**/*.ts",
      "**/*.json",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.github",
      "!**/coverage",
      "!**/.husky"
    ]
  }
}
